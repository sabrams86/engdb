<%= form_for(@ecn, :html => {class: "form-inline"}) do |f| %>
  <% if @ecn.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ecn.errors.count, "error") %> prohibited this ecn from being saved:</h2>

      <ul>
      <% @ecn.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="span4">
      <div class="field">
        <%= f.label :ecn_number %><br />
        <%= f.number_field :ecn_number %>
      </div>
      <div class="field">
        <%= f.label :ecn_type %><br />
        <%= f.select :ecn_type, Ecn::ECN_TYPES, prompt: 'Choose an ECN type' %>
      </div>
      <div class="field">
        <%= f.label :product_line %><br />
        <%= f.select :product_line, Ecn::PRODUCT_LINES, prompt: 'Choose an Product Line' %>
      </div>
      <div class="field">
        <%= f.label :user_name %><br />
        <%= f.text_field :user_name, value: user_name %>
      </div>
  </div>
  <div class="span4">
      <div class="field">
        <%= f.label :comments %><br />
        <%= f.text_area :comments, rows: 6 %>
      </div>
      <div class="field">
        <%= f.label :created_on %><br />
        <%= f.date_select :created_on %>
      </div>
  </div>
  <div class="span3">
      <div class="field">
        <%= f.label :distribute_engineering %><br />
        <%= f.check_box :distribute_engineering %>
      </div>
      <div class="field">
        <%= f.label :distribute_purchasing %><br />
        <%= f.check_box :distribute_purchasing %>
      </div>
      <div class="field">
        <%= f.label :distribute_planning %><br />
        <%= f.check_box :distribute_planning %>
      </div>
      <div class="field">
        <%= f.label :distribute_manufacturing %><br />
        <%= f.check_box :distribute_manufacturing %>
      </div>
      <div class="field">
        <%= f.label :distribute_qantel %><br />
        <%= f.check_box :distribute_qantel %>
      </div>
  </div>
  <div class="span3">
      <div class="field">
        <%= f.label :distribute_sales %><br />
        <%= f.check_box :distribute_sales %>
      </div>
      <div class="field">
        <%= f.label :distribute_inventory %><br />
        <%= f.check_box :distribute_inventory %>
      </div>
      <div class="field">
        <%= f.label :distribute_quality %><br />
        <%= f.check_box :distribute_quality %>
      </div>
      <div class="field">
        <%= f.label :distribute_india %><br />
        <%= f.check_box :distribute_india %>
      </div>
      <div class="field">
        <%= f.label :distribute_finance %><br />
        <%= f.check_box :distribute_finance %>
      </div>
  </div>
  <fieldset class="left" style="width: 580px;">
    <legend><h3>Revisions</h3></legend>
      <%= f.fields_for(:revisions, :html => {class: "form-inline"}) do |builder| %>
          <%= render 'revision_fields', :f => builder%>
      <% end %>
  <p><%= link_to_add_fields("Add Revision", f, :revisions ) %></p>
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
