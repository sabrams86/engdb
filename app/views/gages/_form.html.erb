<%= form_for(@gage) do |f| %>
  <% if @gage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gage.errors.count, "error") %> prohibited this gage from being saved:</h2>

      <ul>
      <% @gage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :gage_number %><br />
    <%= f.text_field :gage_number %>
  </div>
