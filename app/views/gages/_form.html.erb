    <%= f.label :gage_type %><br />
    <%= f.select :gage_type, Gage::GAGE_TYPES, prompt: 'Choose a Gage type' %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </div>
  <div class="field">
    <%= f.label :servicing_company %><br />
    <%= f.text_field :servicing_company %>
  </div>
  <div class="field">
    <%= f.label :servicing_phone %><br />
    <%= f.text_field :servicing_phone %>
  </div>
  <div class="field">
    <%= f.label :calibration_period %><br />
    <%= f.select :calibration_period, Gage::PERIOD, prompt: 'Choose a calibration period' %>
  </div>
  <div class="field">
    <%= f.label :calibration_date %><br />
    <%= f.date_select :calibration_date %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Gage::STATUS, prompt: 'Choose a Status' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
