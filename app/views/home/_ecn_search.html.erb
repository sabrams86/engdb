<h3>Search ECNs</h3>
<%= form_for :ecns, :url => { :controller => "ecns", :action => "index" }, :html => {method: :get, class: "form-inline"} do |f| %>
  <div class="field">
    <%= f.label :ecn_number %><br />
    <%= f.text_field :ecn_number %>
  </div>
  <div class="field">
    <%= f.label :drawing_number %><br />
    <%= f.text_field :drawing_number %>
  </div>
  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name %>
  </div>
  <div class="field">
    <%= f.label :pump_model %><br />
    <%= f.text_field :pump_model %>
  </div>
  <div class="field">
    <%= f.label :ecn_type %><br />
    <%= f.select :ecn_type, Ecn::ECN_TYPES, prompt: ' ' %>
  </div>
  <div class="field">
    <%= f.label :part_type %><br />
    <%= f.select :part_type, Drawing::PART_TYPES, prompt: ' '%>
  </div>
  <div class="input-medium">
    <%= f.label :created_before %><br />
    <%= f.date_select :created_before, {:start_year => 1950, :end_year => Time.now.year} %>
  </div>
  <div class="input-medium">
    <%= f.label :created_after %><br />
    <%= f.date_select :created_after, :default => {:year => 1950}, :start_year => 1950, :end_year => Time.now.year%>
  </div>
  <div class="actions">
    <%= f.submit "Search" %>
  </div>
<% end %>
<div class="actions">
    <%= button_to "Show All Open ECNs", {action: "index_open", controller: "ecns"} %>
  </div>