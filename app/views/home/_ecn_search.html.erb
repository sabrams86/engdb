<h3>Search ECNs</h3>
<%= form_for :ecns, :url => { :controller => "ecns", :action => "index" }, :html => {:method => :get} do |f| %>
  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :user_name %>
  </div>
  <div class="field">
    <%= f.label :drawing_number %><br />
    <%= f.text_field :drawing_number %>
  </div>
  <div class="field">
    <%= f.label :pump_model %><br />
    <%= f.text_field :pump_model %>
  </div>
  <div class="field">
    <%= f.label :frame_size %><br />
    <%= f.text_field :frame_size %>
  </div>
  <div class="field">
    <%= f.label :part_type %><br />
    <%= f.text_field :part_type %>
  </div>
  <div class="field">
    <%= f.label :created_before %><br />
    <%= f.date_select :created_before, {:start_year => 1950, :end_year => Time.now.year} %>
  </div>
  <div class="field">
    <%= f.label :created_after %><br />
    <%= f.date_select :created_after, :default => {:year => 1950}, :start_year => 1950, :end_year => Time.now.year%>
  </div>
  <div class="actions">
    <%= f.submit "Search" %>
  </div>
<% end %>