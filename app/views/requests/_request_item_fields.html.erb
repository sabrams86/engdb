<div class="fields">
  <div class="span4">
	  <div class="field">
	    <%= f.label :part_number %><br />
	    <%= f.text_field :part_number %>
	  </div>
	  <div class="field">
	    <%= f.label :item_number %><br />
	    <%= f.text_field :item_number %>
	  </div>
	  <div class="field">
	    <%= f.label :part_desc %><br />
	    <%= f.text_field :part_desc %>
	  </div>
	  <div class="field">
	    <%= f.label :reference_part %><br />
	    <%= f.text_field :reference_part %>
	  </div>
  </div>
  <% if user_in_manufacturing? or user_in_accounting? %>
	  <div class="span4">
		  <div class="field">
		    <%= f.label :mfg_lead %><br />
		    <%= f.text_field :mfg_lead %>
		  </div>
		  <div class="field">
		    <%= f.label :mfg_labor %><br />
		    <%= f.number_field :mfg_labor %>
		  </div>
		  <div class="field">
		    <%= f.label :mfg_matl %><br />
		    <%= f.number_field :mfg_matl %>
		  </div>
		  <div class="field">
		    <%= f.label :mfg_comments %><br />
		    <%= f.text_area :mfg_comments, rows: 4 %>
		  </div>
	  </div>
  <% end %>
  <% if user_in_engineering? or user_in_accounting? or user_in_manufacturing? %>
	  <div class="span4">
		  <div class="field">
		    <%= f.label :eng_lead %><br />
		    <%= f.text_field :eng_lead %>
		  </div>
		  <div class="field">
		    <%= f.label :eng_hours %><br />
		    <%= f.number_field :eng_hours %>
		  </div>
		  <div class="field">
		    <%= f.label :make_from %><br />
		    <%= f.text_field :make_from %>
		  </div>
		  <div class="field">
		    <%= f.label :eng_status %><br />
		    <%= f.text_field :eng_status %>
		  </div>
		  <div class="field">
		    <%= f.label :eng_comments %><br />
		    <%= f.text_area :eng_comments, rows: 4 %>
		  </div>
		  <div class="field">
		   	 <%= f.label :purch_cost %><br />
		  	 <%= f.number_field :purch_cost %>
		  </div>
	  </div>
  <% end %>
  <% if user_in_accounting? %>
	  <div class="span4">
		  <div class="field">
		    <%= f.label :acct_price %><br />
		    <%= f.number_field :acct_price %>
		  </div>
		  <div class="field">
		    <%= f.label :final_price %><br />
		    <%= f.number_field :final_price %>
		  </div>
		  <div class="field">
		    <%= f.label :final_lead %><br />
		    <%= f.text_field :final_lead %>
		  </div>
	  </div>
  <% end %>
  <div class="revfield">
      <%= link_to_remove_fields "Remove", f %>
  </div>
</div>

