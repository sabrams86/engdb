<%= form_for(@capa) do |f| %>
  <% if @capa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@capa.errors.count, "error") %> prohibited this capa from being saved:</h2>

      <ul>
      <% @capa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="span1">
    <%= f.label :capa_number %>
    <p><b><%= @capa.capa_number %></b></p>
  </div>
    <div class="span1">
    <%= f.label :date %><br />
    <p><b><%= @capa.date=Date.today.strftime("%d/%m/%y") %></b></p>
  </div>
  <div class="span2">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"span2", placeholder: "Your Name Here" %>
  </div>
  <div class="span2">
    <%= f.label :department %><br />
    <%= f.text_field :department, class:"span2" %>
  </div>
  <div class="span2">
    <%= f.label :pump_model %><br />
    <%= f.select :pump_model, Capa::PUMP_MODELS, {:include_blank => true, :default => nil}, class:"span2" %>
  </div>
  <div class="span2">
    <%= f.label :item_number %><br />
    <%= f.text_field :item_number, class:"span2" %>
  </div>
    <div class="span10">
    <%= f.label :description_of_problem %><br />
    <%= f.text_area :description, rows: 15, class: "span10" %>
  </div>

  
  <% if user_in_quality? %>
  <div class="clear"></div>
  <div class="span5">
    <%= f.label :engineer_assigned %>
    <%= f.text_field :engineer, class: "span3", :placeholder => "Type Full Name" %>
  </div>
  <div class="span5">
    <%= f.label :ncr %>
    <%= f.text_field :ncr, class: "span2" %>
  </div>
  <div class="span9">
    <%= f.label :quality_comments %><br />
    <%= f.text_area :quality_comments, rows: 6, class: "span9" %>
  </div>
  
  <% end %>
    
  <br/>
  <div class="actions, clear">
    <div class="center"><%= f.submit %></div>
  </div>
<% end %>
